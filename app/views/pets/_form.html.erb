<%= form_for @pet, :html => {:multipart => true} do |f| %>
  <% if @pet.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@pet.errors.count, "error") %></h4>
      <ul>
      <% @pet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="image row text-center">
    <%= image_tag @pet.image_url(:thumb) if @pet.image? %>
  </div>

  <div class="form-group row">
    <div class="col-sm-2">
      </br>
      <%= f.label :name, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      </br>
      <%= f.text_field :name, class: "form-control" %>
      </br>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :species, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :species, class: "form-control" %>
      </br>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :desc, 'Description', class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :desc, class: "form-control" %>
      </br>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :image, class: "control-label" %>
      <small>Input file or URL</small>
    </div>
    <div class="col-sm-10">
      <%= f.file_field :image %>
      <br/>
      <%= f.text_field :remote_image_url, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-success btn-outline glyphicon glyphicon-ok"> Save</button>
    <%= link_to " Back", pets_path, class: "btn btn-default btn-outline glyphicon glyphicon-remove" %>
  </div>
<% end %>
