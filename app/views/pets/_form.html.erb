<%= form_for(pet) do |f| %>
  <% if pet.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(pet.errors.count, "error") %></h4>

      <ul>
        <% pet.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row-sm-1">
    <div class="col-sm-2">
      <%= f.label :name, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
      </br>
    </div>
  </div>

  <div class="form-group row-sm-2">
    <div class="col-sm-2">
      <%= f.label :species, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :species, class: "form-control" %>
      </br>
    </div>
  </div>

  <div class="form-group row-sm-3">
    <div class="col-sm-2">
      <%= f.label :description, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :description, class: "form-control" %>
      </br>
    </div>
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-success btn-outline glyphicon glyphicon-ok"> Save</button>
    <%= link_to " Back", pets_path, class: "btn btn-default btn-outline glyphicon glyphicon-remove" %>
  </div>
<% end %>
