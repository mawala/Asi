<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">
    <h1>Pets</h1>
  </div>
  <div>
    <%= link_to 'New', new_pet_path, class: "btn btn-outline btn-success glyphicon glyphicon-plus" %>
  </div>
  <table class="table table-bordered text-center table-striped">
    <thead>
      <tr>
        <th class="text-center">Name</th>
        <th class="text-center">Species</th>
        <th class="text-center">Description</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @pets.each do |pet| %>
        <tr>
          <td><%= pet.name %></td>
          <td><%= pet.species %></td>
          <td><%= pet.description %></td>
          <td>
            <%= link_to 'Show', pet, class: "btn btn-outline btn-info btn-sm" %>
            <%= link_to 'Edit', edit_pet_path(pet), class: "btn btn-outline btn-info btn-sm" %>
            <%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

